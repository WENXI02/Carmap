<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:transitionName="details"
            android:id="@+id/linearLayout"
            android:background="?android:attr/selectableItemBackground"
            android:paddingLeft="56dp"
            android:paddingStart="56dp">

            <TextView
                android:layout_marginTop="@dimen/big_padding"
                android:id="@+id/Periphery_title"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dandelion Chocolate" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/Periphery_RatingBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/RatingBar_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7 (51)" />

            </LinearLayout>


            <TextView
                android:id="@+id/text_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_margin_half"
                android:paddingTop="@dimen/activity_margin_half"
                android:text="12 min away"
                android:textColor="?attr/colorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:alpha="0.12"
                android:background="@android:color/black" />

</LinearLayout>


